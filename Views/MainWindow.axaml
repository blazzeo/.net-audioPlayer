<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AudioPlayer.ViewModels"
        xmlns:views="clr-namespace:AudioPlayer.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
        Width="1000" Height="700"
        x:CompileBindings="True"
        x:Class="AudioPlayer.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        ExtendClientAreaToDecorationsHint="True"
        Icon="/Assets/avalonia-logo.ico"
        Title="Player">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

  <DockPanel>
    <DockPanel>
      <views:SearchView DataContext="{Binding SearchVM}" DockPanel.Dock="Top" Height="100"/>
      <views:PlayerView DataContext="{Binding PlayerVM}" DockPanel.Dock="Bottom" Height="85"/>
      <ContentControl Content="{Binding ContentVM}" Margin="20 0 0 0"/>
    </DockPanel>
    
    <StackPanel DockPanel.Dock="Right" Width="250">
      <views:QueueView DataContext="{Binding QueueVM}"/>
    </StackPanel>
  </DockPanel>

</Window>
